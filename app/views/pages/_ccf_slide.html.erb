<script>
 $(document).ready(function(){
   $('.ccf-slider').slick({
     autoplay: true,
     autoplaySpeed: 7000,
     arrows: true,
     initialSlide: 1,
     appendArrows: $('#slide-area'),
     prevArrow: "<button id='slick-prev-button' type='button' class='label success bottom-shadow slick-prev'><i class='fi-rewind'></i></button><span id='slide-control-title' class='fancy padded' style='background-color:rgba(100,200,255,0.6);border-radius:5px;color:white;'><i class='fi-photo'></i></span>",
     nextArrow: "<button id='slick-next-button' type='button' class='label success bottom-shadow slick-next'><i class='fi-fast-forward'></i></button>",
     draggable: false,
     respondTo: 'min'
   });
 });
</script>
