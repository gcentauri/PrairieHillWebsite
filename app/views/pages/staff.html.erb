<div style="background: url('bg-land.jpg');background-size:cover;height:900px;">
  <div id="staff">
    <%= cms_snippet_content('staff-biographies', @cms_site).html_safe %>
  </div>
</div>

<script>

 $("#staff > div:gt(0)").hide();

 setInterval(function() { 
   $('#staff > div:first')
    .fadeOut(1)
    .next()
    .fadeIn(2000)
    .end()
    .appendTo('#staff');
 },  9000);

</script>


