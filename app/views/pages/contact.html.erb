<%#= render 'contact' %>

<div id='' class='expanded row bottom-shadow content-box special-box'>
  <div class='small-12 columns'>

    <div class='small-6 large-5 columns'>
      <%= image_tag("logo-transparent.png", class: "contact-logo") %>
    </div>

    <div class='small-12 large-7 columns'>

      <div class='small-12 columns'>
	<div id='contact-info' class='p-box'>
	  <%= cms_snippet_content('contact-info', @cms_site).html_safe %>
	</div>
      </div>

      <div class='small-11 columns'>
	<%= simple_form_for @contact, :html => {:class => 'form-group' }, :defaults => { :input_html => { :class => 'form-control' } } do |f| %>

	  <%= f.input :name, :required => true %>
	  <%= f.input :email, :required => true %>
	  <%= f.input :message, :as => :text, :required => true %>

	  <div class= "hidden">
	    <%= f.input :nickname, :hint => 'Leave this field blank!' %>
	  </div>

	  <div class='row expanded'>
            <div class='small-12 columns padded right'>
	      <%= f.button :submit, 'Send message', :class=> "button small-6 columns right" %>
            </div>
	  </div>
	<% end %>
      </div>
      
    </div>
    
  </div>
</div>
