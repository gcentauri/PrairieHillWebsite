<div id='ccf-menu' class=''>

  <% if user_signed_in? %>
    <% unless current_page?(activities_path) %>    
      <%= link_to 'Volunteer!', ccf_volunteer_path, class: 'button bold bottom-shadow' %>
    <% end %>
    <div class='btn-group' role='group' aria-label='...'>

      <%= link_to 'My Shifts', ccf_user_shifts_path, class: 'button bottom-shadow' %>
      <%= link_to 'Account', edit_user_registration_path, class: 'button bottom-shadow' %>

      <% if current_user.try(:admin?) %>

	<%= link_to 'Activities', ccf_activities_path, class: 'button bottom-shadow' %>
	<%= link_to 'New Activity', new_activity_path, class: 'button bottom-shadow' %>

      <% end %>
      
    </div>

    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'button bottom-shadow' %>
  <% else %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'button bottom-shadow' %>
    <%= link_to 'Sign In', new_user_session_path, class: 'button bottom-shadow' %>
  <% end %>
</div>
