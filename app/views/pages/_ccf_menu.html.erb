<div id='ccf-menu' class='marge padded right'>

  <% if user_signed_in? %>
    <% unless current_page?(activities_path) %>    
      <%= link_to 'Volunteer!', activities_path, class: 'btn btn-lg btn-primary bold' %>
    <% end %>
    <div class='btn-group' role='group' aria-label='...'>

      <%= link_to 'My Shifts', user_shifts_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Account', edit_user_registration_path, class: 'btn btn-lg btn-primary' %>

      <% if current_user.try(:admin?) %>

	<%= link_to 'Activities', activities_path, class: 'btn btn-lg btn-primary' %>
	<%= link_to 'New Activity', new_activity_path, class: 'btn btn-lg btn-primary' %>

      <% end %>
      
    </div>

    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-lg btn-primary' %>
  <% else %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-lg btn-primary' %>
    <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-lg btn-primary' %>
  <% end %>
</div>
