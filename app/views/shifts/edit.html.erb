<div class="container" style="margin-top:15em;">
  <div class="show">
    <%= @shift.title %> <%= @shift.time %>
    <% unless @shift.vols_needed.integer?  %>
      <%= (@shift.vols_needed) - @volunteered %> volunteers still needed.<br />
    <% else %>
      
    <% end %>

    <% @shift.user_ids.each do |user| %>
      <%= User.find(user).name %><br />
    <% end %>
  </div>

  <div>
    <p>
      <%= link_to 'Edit', edit_shift_path(@shift) %>
      <%= link_to 'Shifts', shifts_path %>
      <%= link_to 'New', new_shift_path %>
    </p>
  </div>
</div>



