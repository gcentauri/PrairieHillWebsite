
<!--<div class="info-flag-lg center" ></div>-->

<div class="container" style="margin-top:150px;">

  <div style="margin:60px;width:90%;">

  <div id="volunteer-menu">
    <ul>
      <li><%= link_to 'Volunteer for Shifts', ccf_path, class: 'btn btn-primary', style: 'font-size:3vw' %></li>
    </ul>
  </div>

    <table class="table table-striped">
      <tr>
	<th>Work Area</th>
	<th>Shift Time</th>
	<th>Guest Volunteer</th>
	<th></th>
      </tr>
      <% @user_shifts.each do |s| %>
	<tr>
	  <td>
	    <%= s.title %>
	  </td>
	  <td>
	    <%= s.time %>
	  </td>
	  <td>
	    <% if s.guest != nil && s.guest != @username %>
	      <%= s.guest %>
	    <% end %>
	  </td>
	  <td>
	    <% if s.guest != nil %>
	      <%= button_to 'Cancel', shift_path(s, :shift => {:guest => nil, :volunteer => nil } ), :method => :put, data: { :confirm => "Are you sure?" }, class: "btn btn-danger" %>
	    <% else %>
	      <%= button_to 'Cancel', shift_path(s, :shift => {:volunteer => nil } ), :method => :put, data: { :confirm => "Are you sure?" }, class: "btn btn-danger" %>
	    <% end %>
	  </td>
	</tr>
      <% end %>
    </table>
  </div>


</div>
