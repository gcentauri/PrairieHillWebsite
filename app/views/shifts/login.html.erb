<div style='margin-top:12em;'>
  <div class="container">
    <div>
      <% if user_signed_in? %>
	<%= render 'form' %>

	<div>
	  <p>
	    <%= link_to 'Shifts', shifts_path %>
	  </p>
	</div>

      <% else %>
	<br/>
	<br/>
	<p class="hi-li-alert">
	  Sign in or Sign up to Volunteer.

	  <div class="center">
	    <ul>
	      <li>
		<em>
		  <%= nav_link "Sign in", new_user_session_path %>
		</em>
		<em>
		  <%= nav_link "Sign up", new_user_registration_path %>
		</em>
	      </li>
	    </ul>
	  </div>

	</p>
      <% end %>
    </div>
  </div>
</div>
