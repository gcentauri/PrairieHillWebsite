<div class="container" style="margin-top:15em;">
  <div class="shift-show">
    <% if @shift.volunteer == nil || @shift.volunteer == "" %>
      Please sign up for this shift! <br/>
      <div class="field form-group" style="width:50%;">
	<%= form_for @shift do |s| %>
	  <%= s.text_field :volunteer, class: "form-control" %>
	  <%= s.submit "Sign Up", class: "btn btn-primary" %>
	<% end %>
      </div>
      <div class="hi-li-3">
	<%= @shift.title %><br />
	<%= @shift.time %><br />
      </div>
    <% else %>
      Thank you, <span class="hi-li-2"><%= @shift.volunteer %></span> !<br /><br />
      <div class="hi-li-3">
	<%= @shift.title %><br />
	<%= @shift.time %><br />
      </div>
    <% end %>

  </div>

  <div id="volunteer-menu">
    <ul>
      <% if current_user.admin == true %>
	<li><%= link_to 'Edit', edit_shift_path(@shift) %></li>
	<li><%= link_to 'Shifts', shifts_path %></li>
	<li><%= link_to 'New', new_shift_path %></li>
	<li><%= link_to 'Volunteer for Shifts', ccf_path %></li>
	<li><%= link_to 'Cancel', shift_path(@shift, :shift => {:volunteer => nil } ), :method => :put, data: { :confirm => "Are you sure?" }, class: "green" %></li>
      <% else %>
	<li><%= link_to 'Volunteer for Shifts', ccf_path %></li>
	<li><%= link_to 'Cancel', shift_path(@shift, :shift => {:volunteer => nil } ), :method => :put, data: { :confirm => "Are you sure?" }, class: "green" %></li>
      <% end %>
    </ul>
  </div>
</div>
