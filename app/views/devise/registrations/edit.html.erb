<div class='row'>
  <!--MAIN-->
  <div class='small-12 small-centered columns'>

    <!--LEFT COLUMN-->
    <div class='small-3 columns'>
      <div class='row'>
	<h2 class="section-title hi-li padded bottom-shadow">Edit Your Account</h2>
      </div>
    </div>
    <!---->

    <!--RIGHT COLUMN-->
    <div class='small-8 columns'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

	<!--ERROR MESSAGES-->
	<div class="row">
	  <div class='small-12 columns'>
	    <%= devise_error_messages! %>
	  </div>
	</div>
	<!---->

	<!--EMAIL-->
	<div class='row'>
	  <div class='small-12 columns'>
	    <span class='input-group-addon'>
	      <%= f.label :email %>
	    </span>
	    <%= f.email_field :email %>
	  </div>
	</div>
	<!---->

	<div class='row'>
	  <div class='small-12 columns'>
	    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
	    <% end %>
	  </div>
	</div>

	<div class='row'>
	  <div class='small-12 columns'>
	    <span class='input-group-addon'>
	      <%= f.label :password %>
	    </span>
	    <%= f.password_field :password, placeholder: "leave blank if you don't want to change it",  autocomplete: "off", class: 'form-control' %>
	  </div>
	</div>

	<div class='row'>
	  <div class='small-12 columns'>
	    <span class='input-group-addon'>
	      <%= f.label :password_confirmation %>
	    </span>
	    <%= f.password_field :password_confirmation, placeholder: "leave blank if you don't want to change it", autocomplete: "off", class: 'form-control' %>
	  </div>
	</div>

	<div class='row'>
	  <div class='small-12 columns'>
	    <span class='input-group-addon'>
	      <%= f.label :current_password %>
	    </span>
	    <%= f.password_field :current_password, placeholder: 'we need your current password to confirm changes', autocomplete: "off", class: 'form-control' %>
	  </div>
	</div>

	<div class='row'>
	  <div class='small-12 columns'>
	    <%= f.submit "Update", class: 'btn btn-primary' %>
	  </div>
	</div>
      <% end %>

      <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-warning' %>
    </div>
  </div>
</div>
