
<fieldset class='nested-fields'>

  <!--START TIME-->
  <div class='small-4 columns'>
    <div class='form-group' style='background:gold'>
      <div class='field'>
	<%= f.label "Start Time" %>
	<%= f.select :start_time, options_for_select(get_times[0]) %>
	<div class='input-group date hidden' id='datetimepicker-<%= rand(100) %>'>
	  <%#= f.text_field :start_time, class: 'form-control' %>
	  <span class='input-group-addon'>
	    <span class='glyphicon glyphicon-calendar'></span>
	  </span>
	</div>
      </div>
    </div>
  </div>

  <!--END TIME-->
  <div class='col-sm-4'>
    <div class='form-group' style='background:green'>
      <div class='field'>
	<%= f.label "End Time" %>
	<%= f.select :end_time, options_for_select(get_times[1]) %>
	<div class='input-group date hidden' id='datetimepicker-<%= rand(100) %>'>
	<%#= f.text_field :end_time, class: 'form-control foo' %>
	  <span class='input-group-addon'>
	    <span class='glyphicon glyphicon-calendar'></span>
	  </span>
	</div>
      </div>
    </div>
  </div>

  <!--CATEGORY-->
  <div class='small-4 columns'>
    <%= f.label "Category" %>
    <%#= f.text_field :category, class: 'form-control foo' %>
    <%#= f.select(:category) do %>
    <%= f.select :category, options_for_select([['Preparation', 'Preparation'], ['Station', 'Station'], ['Tear Down', 'Tear Down']], :selected => f.object.category) %>
      <%# [['Preparation', 'Preparation'], ['Station', 'Station'], ['Tear Down', 'Tear Down']].each do |c| %>
	<%#= content_tag(:option, c.first, value: c.last) %>
      <%# end %>
    <%# end %>
    
  </div>
  
  <!--REMOVE OPTION-->
  <div class='col-sm-4'>
    <div class='form-group'>
      <div class='field'>
	<% if f.object.persisted? %>
	  <%= f.check_box :_destroy %>
	  <%= f.label :_destroy, "Remove Shift", class: 'tr-sm' %>
	<% end %>
      </div>
    </div>
  </div>

  <!--REMOVE-->
  <%#= f.hidden_field :_destroy %>
  <% unless f.object.persisted? %>
    <%= link_to_remove_association f do %>
      <i class="glyphicon glyphicon-remove-sign"></i>
    <% end %>
  <% end %>
</fieldset>


