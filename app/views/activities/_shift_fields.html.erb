
<fieldset class='nested-fields'>

  <div class='col-sm-4'>
    <div class='form-group' style='background:gold'>
      <div class='field'>
	<%= f.label "Start Time" %>
	<div class='input-group date' id='datetimepicker-<%= rand(100) %>'>
	  <%= f.text_field :start_time, class: 'form-control' %>
	  <span class='input-group-addon'>
	    <span class='glyphicon glyphicon-calendar'></span>
	  </span>
	</div>
      </div>
    </div>
  </div>

  <div class='col-sm-4'>
    <div class='form-group' style='background:green'>
      <div class='field'>
	<%= f.label "End Time" %>
	<div class='input-group date' id='datetimepicker-<%= rand(100) %>'>
	<%= f.text_field :end_time, class: 'form-control foo' %>
	  <span class='input-group-addon'>
	    <span class='glyphicon glyphicon-calendar'></span>
	  </span>
	</div>
      </div>
    </div>
  </div>

  <div class='col-sm-4'>
    <div class='form-group'>
      <div class='field'>
	<% if f.object.persisted? %>
	  <%= f.check_box :_destroy %>
	  <%= f.label :_destroy, "Remove Shift", class: 'tr-sm' %>
	<% end %>
      </div>
    </div>
  </div>
  
  <%#= f.hidden_field :_destroy %>
  <% unless f.object.persisted? %>
    <%= link_to_remove_association f do %>
      <i class="glyphicon glyphicon-remove-sign"></i>
    <% end %>
  <% end %>
</fieldset>


