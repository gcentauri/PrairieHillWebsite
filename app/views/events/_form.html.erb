<%= form_for @event, url: event_path(@event), html: { multipart: true } do |f| %>
  <%#= form_for @event, url: events_path, html: { multipart: true } do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this activity from being saved:</h2>
      <ul>
	<% @event.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
      </ul>
    </div>
  <% end %>

  Title
  <%= f.text_field :title, placeholder: 'Name of the event' %>
  Subtitle
  <%= f.text_field :subtitle %>
  Where
  <%= f.text_field :location %>
  Address
  <%= f.text_field :location_address %>
  When (future start, stop, range...)
  <%= f.datetime_select :date_and_time %>
  Parent Event
  <%= f.text_field :parent %>  
  Description
  <%= f.text_field :description %>
  Links
  <%= f.text_field :links %>
  Public?
  <%= f.check_box :public %>
  <hr/>
  Event Image ('.feature-image')
  <%= f.file_field :event_image %>

  
  <%= f.submit "Save", class: "button" %>
  
<% end %>
