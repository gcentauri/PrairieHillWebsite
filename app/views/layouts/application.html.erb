<!DOCTYPE html>

<head>
  <%= metamagic title: "PRAIRIE HILL Learning Center", description: "Montessori education for children with an emphasis on meeting the individual and communal developmental needs of each child in a historic indoor and a country outdoor environment", keywords: %w(Montessori education children Nebraska) %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag( 'http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,700italic,700|Clicker+Script|Kaushan+Script|News+Cycle:400,700|BenchNine|Poiret+One|Open+Sans+Condensed:300|Playball|Shadows+Into+Light+Two') %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'vendor/modernizr' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href='https://fonts.googleapis.com/css?family=Lobster|Pacifico' rel='stylesheet' type='text/css'>
</head>
<body>

  <div id='small-browser' class='small-11 left columns'>
    <div id='mobile-preview-button'
	 class='
	 small-4 small-centered columns
	 button expand radius
	 hi-li bottom-shadow
	 '
	 style='
	 position:absolute;
	 z-index:20;
	 '
	 >
      Coming Soon!
    </div>
    <div id='mobile-logo-placeholder'
	 class='
	 small-4 columns
	 '
	 style='
	 position:absolute;
	 top:150px;	   
	 left:8%;

	 width:90%;
	 //height:70%;
	 z-index:2;
	 '
	 >
      <%= image_tag "logo-transparent.png", style: "background-color:white;border: 2px solid white;", class: 'bottom-shadow' %>
    </div>
    <div id='mobile-preview-view'
	 class='
	 //hidden
	 small-12 small-centered columns
	 '
	 style='
	 position:relative;
	 left:4%;
	 opacity:0;
	 '
	 >
      <%= yield :small %>
    </div>
  </div>
  
  <!--PAGE 12-->
  <div class='row'>


    <div id='normal-browser' class='small-12 small-centered columns'>

      <!--NAV 2-->
      <div id='header' class='medium-2 large-2 columns' style='position:fixed;z-index:3;'>
	<%= render 'layouts/large_header' %>
      </div>

      <!--MAIN 8-->
      <div class='small-10 small-centered large-9 columns'
	   style='padding:0;
	   margin:0;
	   position:fixed;
	   top:20px;
	   right:50px;
	   z-index:2;
	   border-radius:2px;
	   height:72px;'>

	<!---TITLE--->
	<div id='ph-title' class='small-12 columns' style='padding:0;opacity:0.9;'>
	  <%= render 'layouts/title' %>
	</div>
	<!--^^-->
	
	<!--CONTENT-->
	<div class='small-12 columns'>
	  <div class='row'>

	    <div id='primary-element'
		 class='small-10 large-9 columns content bottom-shadow'
		 style='opacity:1;
		 position:fixed;
		 margin:0 auto;
		 top:110px;
		 right:50px;
		 height:75%;
		 border-radius:2px;'>

	      <%= yield %>
	    </div>
	  </div>

	  <%#= render 'layouts/expand_retract_buttons' %>
	  
	</div>
	<!--^^-->

	<!--FOOTER-->
	<div id='footer-main' class='small-12 columns footer'>
	  <div class='row'>
	    <%= render '/layouts/footer' %>
	  </div>
	</div>
	<!--endFOOTER-->
      </div>
      <!--endMAIN-->
    </div>
  </div>
  <!--endPAGE-->  

</body>
</html>
