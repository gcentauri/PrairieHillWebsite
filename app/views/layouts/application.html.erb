<!DOCTYPE html>
<html>
  <head>
    <title>Prairie Hill Learning Center</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>

    <div id="wrapper">

      <!-- HEADER -->
      <% if current_page?(root_path) %>
	<div id="head">
	  <%= render 'layouts/header' %>
	</div>
      <% else %>
	<div id="head" style="height:50%;">
	  <%= render 'layouts/header' %>
	</div>
	<div>
	  <% flash.each do |name, msg| %>
	    <%= content_tag(:div, msg, class: "alert alert-info") %>
	  <% end %>
	</div>
      <% end %>
      <!-- END HEADER -->


      <!-- CONTENT -->
      <div id="skrollr-body">
	<div id="info-column">
	  <% if !current_page?(contact_path) %>
	    <%= yield %>
	    <%= render 'pages/contact' %>	      
	  <% else %>
	    <%= request.env['PATH_INFO'] %>
	    <%= render 'pages/contact' %>	      
	  <% end %>
	</div>
	<div class="container">
	  <%= cms_snippet_content('legal', @cms_site).html_safe %>
	</div>
      </div>
      <!-- END CONTENT -->

      <!-- FOOTER -->
      <div id="menu">
	<%= render 'layouts/menu' %>
      </div>
      <!-- END FOOTER -->

    </div>

    <!-- jSCRIPT -->
    <script>
     (function($){
       skrollr.init({
	 forceHeight: false,
	 smoothScrolling: false
       }).refresh();
     } (jQuery));


    </script>
    <!-- END jSCRIPT -->

  </body>
</html>
