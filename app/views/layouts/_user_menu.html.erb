<div>

  <div class="user-menu"> 
    <span class="glyphicon glyphicon-leaf" style=""> </span> 
  </div>

  <div class="menu-type" 
       data-0="opacity:1;"
       data-500="opacity:0;"
       >
    <% if user_signed_in? %> 
      <span class="menu-title"><em>User Menu</em></span>
    <% else %>
      <span class="menu-title"><em>Sign In</em></span>
    <% end %>
  </div>

    <ul class="menu-list" style="display:none;">
      <% if user_signed_in? %>
	<li>
	  <em>
	    <%= link_to destroy_user_session_path, method: :delete do %>
	      Sign out
	    <% end %>
	  </em>
	</li>

	<li>
	  <em>
	    <%= link_to "Settings", edit_user_registration_path %>
	  </em>
	</li>

	
	<% if current_user.try(:admin?) %>

	  <li>
	    <em>
	      <%= link_to "Admin", comfy_admin_cms_path %>
	    </em>
	  </li>

	  <li>
	    <em>
	      <%= link_to "Shifts", shifts_path %>
	    </em>
	  </li>

	  <li>
	    <em>
	      <%= link_to "Activities", activities_path %>
	    </em>
	  </li>

	<% end %>

	<li>
	  <em>
	    <%= link_to "Country Fair", ccf_path %>
	  </em>
	</li>
	<li>
	  <em>
	    <%= link_to "My Shifts", user_shifts_path %>
	  </em>
	  <em>
	    <%= nav_link "Parent Tours", news_path %>
	  </em>

	</li>


      <% else %>

	<li>
	  <em>
	    <%= nav_link "Sign in", new_user_session_path %>
	  </em>
	  <em>
	    <%= nav_link "Sign up", new_user_registration_path %>
	  </em>
	  <em>
	    <%= nav_link "Parent Tours", news_path %>
	  </em>
	</li>

      <% end %>
    </ul>

</div>
