<div class="logo-box">

  <div id="title">


    <div>
      <%= image_tag("logo-transparent.png", class: "title-logo") %>
    </div>

    <div class="title-name">
      <strong>PRAIRIE HILL</strong>
    </div> 

    <div class="title-sub-name">
      <em>Learning Center</em>
    </div>


  </div>

</div>

<div id="log-in-out">
  <ul>
    <% if user_signed_in? %>

      <li>
	<em>
	  <%= link_to destroy_user_session_path, method: :delete do %>
	    Sign out
	  <% end %>
	</em>
      </li>

      <li>
	<em>
	  <%= link_to "Country Fair", ccf_path %>
	</em>
      </li>

      <% if current_user.admin == true %>

	<li>
	  <em>
	    <%= link_to "Admin", comfy_admin_cms_path %>
	  </em>
	</li>
      <% end %>

    <% else %>

      <li>
	<em>
	  <%= nav_link "Sign in", new_user_session_path %>
	</em>
	<em>
	  <%= nav_link "Sign up", new_user_registration_path %>
	</em>
      </li>

    <% end %>
  </ul>
</div>

<% if current_page?(root_path) %>
  <%= render 'page_add_quote' %>
<% end %>






