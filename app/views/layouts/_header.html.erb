<div class="logo-box">
  <div data-0="opacity:0.9;"
       data-1000="opacity:0;"
       >
    <%= image_tag("logo-transparent.png", class: "title-logo") %>
    <div class="title-name">
      <strong>PRAIRIE HILL</strong>
    </div> 
    <div class="title-sub-name">
      <em>Learning Center</em>
    </div>

  </div>

  <!-- <div id="title">-->


</div>


<div>
  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-info") %>
  <% end %>
</div>

<div style="cursor:pointer;">
  <%= render 'layouts/user_menu' %>
</div>

<% if current_page?(root_path) %>
  <%= render 'page_add_quote' %>
<% end %>

<script>

 $('#user-menu').click(function(){
   $(this).children('.menu').toggle('slow');
   $(this).children('.menu-title').toggle('slow');
 
   return false;
 });


</script>






